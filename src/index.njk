{% extends "_layout.njk" %}
{% import "macros/_project.njk" as project %}

{% block head %}
<title>Tim Ings</title>
{% endblock %}

{% block content %}
    <div id="log" class="log hidden"></div>
    <div class="page-title">
        <h1 class="typewriter">tim-ings $&nbsp;<input id="cmd" type="text" maxlength="128" autocomplete="off" autocapitalize="off" spellcheck="false" aria-label="Command box" /></h1>
        <div class="links">
            <a href="https://github.com/tim-ings">github</a>
            <a href="https://www.linkedin.com/in/tim-ings">linkedin</a>
            <button id="link-email"></button>
            <button id="link-phone"></button>
            <a href="./content/tim-ings-resume.pdf">resume.pdf</a>
            <a href="./content/tim-ings-resume.docx">resume.docx</a>
        </div>
        <script>
            if (window.location.search.indexOf('masked=true') !== -1) {
                document.getElementById('link-email').classList.add('masked');
                document.getElementById('link-phone').classList.add('masked');
            }
        </script>
    </div>

    <h2 class="category-header" id="featured">Featured</h2>
    <div class="project-container">
        {% for proj in data.categories.featured %}
            {{ project.new(proj, 'featured') }}
        {% else %}
            <h1>NO PROJECT DATA</h1>
        {% endfor %}
    </div>
    <hr />

    <h2 class="category-header" id="websites">Websites</h2>
    <div class="project-container">
        {% for proj in data.categories.websites %}
            {{ project.new(proj, 'websites') }}
        {% else %}
            <h1>NO PROJECT DATA</h1>
        {% endfor %}
    </div>
    <hr />

    <h2 class="category-header" id="games">Games</h2>
    <div class="project-container">
        {% for proj in data.categories.games %}
            {{ project.new(proj, 'games') }}
        {% else %}
            <h1>NO PROJECT DATA</h1>
        {% endfor %}
    </div>
    <hr />

    <h2 class="category-header" id="programs">Programs</h2>
    <div class="project-container">
        {% for proj in data.categories.programs %}
            {{ project.new(proj, 'programs') }}
        {% else %}
            <h1>NO PROJECT DATA</h1>
        {% endfor %}
    </div>
    <hr />

    <h2 class="category-header" id="addons">AddOns</h2>
    <div class="project-container">
        {% for proj in data.categories.addons %}
            {{ project.new(proj, 'addons', proj.downloads, 'downloads on Curse', '#eb7d34') }}
        {% else %}
            <h1>NO PROJECT DATA</h1>
        {% endfor %}
    </div>
    <hr />
{% endblock %}

{% block scripts %}
<script src="./commandBox.js"></script>
{% endblock %}